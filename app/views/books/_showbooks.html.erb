
 <% @user.books.each do |book| %>
    <tr>
      <td><p><span class="lead">

      	<strong><%= book.title %></strong>

      	<% if book.author != nil %>, <small><em><%= book.author %></em></small>
      	<% end %></span>


		<span class="glyphicon glyphicon-edit"></span>

      	<%= link_to '', user_book_path(book.user_id, book.id), :method => :delete, :onclick => "return confirm('Are you sure you want to delete this read?')", :class=> 'glyphicon glyphicon-remove-circle' %>
      </td>
    </tr>

<!-- If book description exists -->
<% if book.description != '' %>
    <blockquote>
  <p class="text-primary">"<%= book.description %>"</p>
  <% if book.author != nil %><small><cite title="Source Title"><%= book.author %></cite></small><% end %>
	</blockquote>
<% end %>
<div>

<span class="label label-warning">30 <span class="glyphicon glyphicon-star"></span> Courses</span>
<span class="label label-primary">2 <span class="glyphicon glyphicon-bookmark"></span> Reading Lists</span>
<span class="label label-default">3 <span class="glyphicon glyphicon-thumbs-up"></span> Professors</span>
<span class="label label-danger">3 <span class="glyphicon glyphicon-heart"></span> Friends</span>
<span class="label label-success btn-xs"><span class="glyphicon glyphicon-gift"></span></span>
<br>
<br>
<br>
</div>

<% end %>

<p>
    <button type="button" class="btn btn-default btn-sm">
		<%= link_to '', new_user_book_path(@user.id), :class=>'glyphicon glyphicon-plus'%></button>
